        }

        .boton-debilidades {
            height: 48px;
            min-width: 48px;
            background: #005095;
            color: #fff;
            font-size: 1.2em;
            border: 0;
            border-radius: 0.2em;
            text-align: center;
            margin: 1em 1em 1.5em;
            cursor: pointer;
            padding: 0 1em;

        }

                .boton-debilidades:hover {
            transform: scale(1.1);
        }

        .boton-amenazas {
            height: 48px;
            min-width: 48px;
            background: #800080;
            color: #fff;
            font-size: 1.2em;
            border: 0;
            border-radius: 0.2em;
            text-align: center;
            margin: 1em 1em 1.5em;
            cursor: pointer;
            padding: 0 1em;
        }

        .boton-amenazas:hover {
            transform: scale(1.1);
        }

        .boton-fortalezas {
            height: 48px;
            min-width: 48px;
            background: #B50000;
            color: #fff;
            font-size: 1.2em;
            border: 0;
            border-radius: 0.2em;
            text-align: center;
            margin: 1em 1em 1.5em;
            cursor: pointer;
            padding: 0 1em;

        }

        .boton-fortalezas:hover {
            transform: scale(1.1);
        }

        .boton-oportunidades {
            height: 48px;
            min-width: 48px;
            background: #134D16;
            color: #fff;
            font-size: 1.2em;
            border: 0;
            border-radius: 0.2em;
            text-align: center;
            margin: 1em 1em 1.5em;
            cursor: pointer;
            padding: 0 1em;

        }


        .boton-oportunidades:hover {
            transform: scale(1.1);
        }        

        .options {
    padding-top: 1%;

        }

        .titulo{
                width: 85%;
    float: left;
        }


@media (max-width: 600px) {
  .facet_sidebar {
    display: none;
  }
}
    </style>


    <div class="container ">
        <div class="row">
            <div class="col md-6 pr-0 pl-0  tabladafoDebilidades">
                <div class=" colorDebilidades">
                    <h3 class="ml-3">
                        Debilidades</h3>
                </div>
                <div class="list">
                    <div class="item">
                        {% for qi in debilitats %}

                            <div class="titulo">

                                <p class="ml-4">{{ qi.getQuestioInterna().getNombre() }}
                                </p>
                            </div>
                            <div class="options">


                                <a>
                                    <span class="icon-pencil-alt text-white"></a>
                                    <a>
                                        <span class="icon-trash-empty text-white"></a>

                                    </div>


                                {% endfor %}
                                <input class="boton-debilidades" href="" type="button" value="+ Nueva debilidad"></input>

                        </div>
                    </div>
                </div>


                <div class="col md-6  pr-0 pl-0 tabladafoAmenazas">
                    <div class=" colorAmenazas">
                        <h3 class="ml-3">
                            Amenazas</h3>
                    </div>
                    <div class="list">
                        <div class="item">
                            {% for qe in amenaces %}
                                                        <div class="titulo">

                                <p class="ml-4">{{ qe.getQuestioExterna().getNombre() }} </p>
</div>


                            <div class="options">


                                    <a>
                                        <span class="icon-pencil-alt text-white"></a>
                                        <a>
                                            <span class="icon-trash-empty text-white"></a>
</div>

                                       
                                    {% endfor %}
                                    <input class="boton-amenazas" href="" type="button" value="+  Nueva amenaza"></input>


                            </div>
                        </div>
                    </div>
                </div>


                <div class="row ">
                    <div class="col md-6  pr-0 pl-0 tabladafoFortalezas">
                        <div class=" colorFortalezas">

                            <h3 class="ml-3">
                                Fortalezas</h3>
                        </div>

                        <div class="list">
                            <div class="item">


                                {% for qi in fortaleses %}
                                                                                        <div class="titulo">

                                    <p class="ml-4">{{ qi.getQuestioInterna().getNombre() }}</p>
                                    </div>

                                                                                        <div class="options">


                                        <a>
                                            <span class="icon-pencil-alt text-white"></a>
                                            <a>
                                                <span class="icon-trash-empty text-white"></a>

                                                                                    </div>

                                        {% endfor %}
                                        <input class="boton-fortalezas" href="" type="button" value="+ Nueva fortaleza"></input>

                                </div>
                            </div>
                        </div>


                        <div class="col md-6 pr-0 pl-0 tabladafoOportunidades">
                            <div class=" colorOportunidades">

                                <h3 class="ml-3">
                                    Oportunidades</h3>
                            </div>

                            <div class="list">
                                <div class="item">
                                    {% for qe in oportunitats %}
                                                                                                                            <div class="titulo">

                                        <p class="ml-4">{{ qe.getQuestioExterna().getNombre() }}</p>

                                        </div>
                                        

                                                                                                                            <div class="options">


                                            <a>
                                                <span class="icon-pencil-alt text-white"></a>
                                                <a>
                                                    <span class="icon-trash-empty text-white"></a>

                                                                                            </div>

                                                
                                            {% endfor %}

                                            <input class="boton-oportunidades" href="" type="button" value="+ Nueva oportunidad"></input>

                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
