{% extends 'base.html.twig' %}

{% block title %}Ejemplo DAFO
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .colorDebilidades {
            background-color: #005095;
            padding: 3px;

        }

        .colorDentroDebilidades {
            opacity: 0.8;

        }

        .colorAmenazas {
            background-color: #800080;
            padding: 3px;


        }
        .colorFortalezas {
            background-color: #B50000;
            padding: 3px;


        }
        .colorOportunidades {
            background-color: #134D16;
            padding: 3px;


        }

        p {
            padding-top: 7px;
        }

        h3 {
            color: white;
        }

        .item {}

        .tabladafoDebilidades {
            background: #A1BED8;
        }
        .tabladafoAmenazas {
