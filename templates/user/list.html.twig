{% extends 'base.html.twig' %}
{% block title %}Llistat de peliculas
{% endblock %}
{% block body %}
    <section class="bg-white text-black mb-0">
        <section class="container-fluid">
            <section class="row">
                <section class="col-md-12">
                    <table class="table">
                        <thead>
                            <tr>
                           <th scope="col">ID</th>

                                <th scope="col">Nombre Empresa</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">role</th>
                                <th scope="col">email</th>
                                <th scope="col">password</th>

                                <th scope="col">isActive</th>
                                <th scope="col">Opciones</th>

                            </tr>
                        </thead>
                        <tbody>
                            {% for user in user %}
                                <tr>
                                    <th scope="row">{{user.id}}</th>

                                {% if user.empresa != null %}
                                    <td>{{ user.empresa.nombre}}</td>
                                  {% else %}

                                    <td></td>
                                {% endif %}
                                
                                    
                                    
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.role.nombre }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.password }}</td>
                                    <td>{{ user.isActive }}</td>
                                    <td>
                                    <a </span href="{{ path('user_delete', {'id': user.id}) }}" <span class="icon-trash-empty text-black">Eliminar</a>
                                    </td>
                                </tr>


                            {% endfor %}
                        </tbody>
                    </table>
                </section>
            </section>
        </section>
    </section>
{% endblock %}