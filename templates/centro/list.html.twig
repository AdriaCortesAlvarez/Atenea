{% extends 'base.html.twig' %}
{% block title %}Llistat de peliculas
{% endblock %}
{% block body %}
    <section class="bg-white text-black mb-0">
        <section class="container-fluid">
            <section class="row">
                <section class="col-md-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Fecha de Alta</th>
                                <th scope="col">Fecha de Baja</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for centros in centro %}
                                <tr>
                                    <th scope="row">{{centros.id}}</th>
                                    <td>{{ centros.nombre }}</td>
                                    <td>{{ centros.fechaAlta|date('d-m-Y')}}</td>
                                    <td>{{ centros.fechaBaja|date('d-m-Y') }}</td>
                                    <td>{{ centros.descripcion }}</td>
                                  {#   <td>
                  <a class="btn btn-danger btn-md" href="{{ path('centros_new', {'id': centros.id}) }}">Añadir centro</a>
                                    </td> #}
                                    <td>
                         <a </span href="{{ path('centro_edit', {'id': centros.id}) }}" <span class="icon-pencil-alt text-black">Edit</a>
                         <a </span href="{{ path('centro_delete', {'id': centros.id}) }}" <span class="icon-trash-empty text-black">Eliminar</a>

                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </section>
            </section>
        </section>
    </section>
{% endblock %}